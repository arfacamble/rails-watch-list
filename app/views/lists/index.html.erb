<div class="banner d-flex flex-column justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://1.bp.blogspot.com/-LEu-orFfd3s/V_RKd-1rXLI/AAAAAAAAGKI/L2rMe_qPsXs0vwTVDBBlvnoMa-5BDyNJgCLcB/s1600/Arnold-Collage.jpg);">
  <div class="container">
    <h1>All my <strong>WatchLists</strong></h1>
    <p>Thank the heavens for animals and explosions</p>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new-list-modal">
      New List
    </button>
    <!-- Modal -->
    <div class="modal fade" id="new-list-modal" tabindex="-1" aria-labelledby="new-list-modal-label" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add a New List</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for(@list) do |f| %>
              <%= f.input :name %>
              <%= f.input :photo, as: :file %>
              <%= f.submit class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="list-card-container d-flex flex-wrap justify-content-around">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: 'list-card-link' do %>
        <% if list.photo.attached? %>
          <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
            <p><%= list.name.capitalize %></p>
          </div>
        <% else %>
          <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/320x180/?<%= list.name %>')">
            <p><%= list.name.capitalize %></p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
